<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.password">registro_tiempos</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/actividades</property>
        <property name="hibernate.connection.username">registro_tiempos</property>
        <mapping resource="co/edu/usbcali/actividades/modelo/Actividad.hbm.xml" />
        <mapping resource="co/edu/usbcali/actividades/modelo/RegistroActividad.hbm.xml" />
        <mapping resource="co/edu/usbcali/actividades/modelo/Usuario.hbm.xml" />
    </session-factory>
</hibernate-configuration>
